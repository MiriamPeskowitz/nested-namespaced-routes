<h1><%= @album.name %></h1>

<ul>
  <% @album.pictures.each do |picture| %>
  <li>
    <%= link_to(image_tag(picture.url, :width => "300px"), album_picture_path(picture)) %> - 
    <%= link_to "Edit", edit_album_picture_path(@album,picture) %>
  </li>
  <% end %>
</ul>

